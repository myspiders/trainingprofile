    "import base64\n",
    "import json\n",
    "import requests\n",
    "import os\n",
    "import time\n",
    "import pandas as pd\n",
    "import csv\n",
    "import re\n",
    "class BaiduPicIndentify:\n",
    "    def __init__(self,img):\n",
    "        self.AK ="申请的app_id\n",
    "        self.SK = \"申请的app_key\n",
    "        self.img_src = img\n",
    "        self.headers = {\n",
    "            \"Content-Type\": \"application/json; charset=UTF-8\"\n",
    "        }\n",
    " \n",
    "    def get_accessToken(self):#此函数用于获取参数access_token\n",
    "        host = 'https://aip.baidubce.com/oauth/2.0/token?grant_type=client_credentials&client_id=' + self.AK + '&client_secret=' + self.SK\n",
    "        response = requests.get(host, headers=self.headers)\n",
    "        json_result = json.loads(response.text)\n",
    "        return json_result['access_token']\n",
    " \n",
    "    def img_to_BASE64(slef,path):#此函数将图片文件转换成base64加密的字符串\n",
    "        with open(path,'rb') as f:\n",
    "            base64_data = base64.b64encode(f.read())\n",
    "            return base64_data\n",
    " \n",
    "    def detect_face(self,file):#接收返回结果，并提取数据\n",
    "        # 人脸检测与属性分析\n",
    "        img_BASE64 = self.img_to_BASE64(self.img_src)\n",
    "        request_url = \"https://aip.baidubce.com/rest/2.0/face/v3/detect\"\n",
    "        post_data = {\n",
    "            \"image\": img_BASE64,\n",
    "            \"image_type\": \"BASE64\",\n",
    "            \"face_field\": \"gender,age,beauty,gender,race,expression\",\n",
    "            \"face_type\": \"LIVE\"\n",
    "        }\n",
    "        access_token = self.get_accessToken()\n",
    "        request_url = request_url + \"?access_token=\" + access_token\n",
    "        response = requests.post(url=request_url, data=post_data, headers=self.headers)\n",
    "        json_result = json.loads(response.text)\n",
    "        data={}\n",
    "        if json_result['error_msg']!='pic not has face':\n",
    "                data['name']=re.findall('(.*?).jpg',file)[0]\n",
    " #               data['']json_result['result']['face_num'])\n",
    "                data['age']=json_result['result']['face_list'][0]['age']\n",
    "                data['beauty']=json_result['result']['face_list'][0]['beauty']\n",
    "                data['gender']=json_result['result']['face_list'][0]['gender']['type']\n",
    "                data['race']=json_result['result']['face_list'][0]['race']['type']\n",
    "                data['expression']=json_result['result']['face_list'][0]['expression']['type']\n",
    "                return data\n",
    "        else:\n",
    "            return \"Error\"\n",
    "#构建可视化文件界面，很简陋\n",
    "from tkinter import *\n",
    "import tkinter.messagebox\n",
    "mygui=Tk()\n",
    "mygui.title('颜值评价程序')\n",
    "mygui.geometry('500x300')\n",
    "l = Label(mygui,text='请输入文件夹：',font=('Arial', 12)).place(x=10,y=120)\n",
    "# 说明： bg为背景，fg为字体颜色，font为字体，width为长，height为高，这里的长和高是字符的长和高，比如height=2,就是标签有2个字符这么高\n",
    "dir_var=StringVar()\n",
    "dir_var.set('请输入文件夹')\n",
    "entry_Entry=Entry(mygui,textvariable=dir_var,width=20,font=('Arial', 14))#添加文本框\n",
    "entry_Entry.place(x=120,y=120) \n",
    "dir_var1=StringVar()\n",
    "t = Entry(mygui,textvariable=dir_var1,width=20,font=('Arial', 14))\n",
    "t.place(x=120,y=150)\n",
    "def hit_me():#点击按钮会产生的行为\n",
    "    rootid=entry_Entry.get()\n",
    "    os.chdir(rootid)\n",
    "    rootid1=os.listdir(rootid)\n",
    "    with open('name.csv','w',newline='') as f:#准备保存数据到csv中\n",
    "                title=['name','age','beauty','gender','race','expression']\n",
    "                writer=csv.DictWriter(f,fieldnames=title)\n",
    "                writer.writeheader()\n",
    "                for file in rootid1:\n",
    "                    img_src=rootid+'\\\\'+file\n",
    "                    mygui.update()\n",
    "                    try:\n",
    "                        baiduDetect = BaiduPicIndentify(img_src)\n",
    "                        data=baiduDetect.detect_face(file)\n",
    "                        writer.writerow(data)\n",
    "                        dir_var1.set(file)\n",
    "                    except:\n",
    "                        tkinter.messagebox.showwarning(title='Warning', message='包含非图片文件，请仔细检查文件夹')\n",
    "                        break\n",
    "b1=Button(mygui,text='开始',command=hit_me)#添加按钮\n",
    "b1.place(x=400,y=118)\n",
    "mygui.mainloop()"
   ]
